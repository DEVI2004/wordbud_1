{{> header}}
{{> navbar}}

<div class="container">
    <h2>Explore Courses</h2>
    <div class="row">
        {{#each courses}}
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <a href="/courses/{{this.id}}" class="btn btn-primary">Start Learning</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
